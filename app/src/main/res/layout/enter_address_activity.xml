<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"

    android:padding="0dp"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/first"
        android:layout_width="match_parent"
        android:padding="16dp"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/layout0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical">



                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="20dp"

                    android:id="@+id/back"
                    android:src="@drawable/baseline_arrow_back_ios_242"
                    android:layout_marginTop="3dp"
                    android:layout_marginEnd="10dp" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add Address"
                    android:layout_marginLeft="75dp"
                    android:textSize="25sp" />

            </LinearLayout>

        </LinearLayout>





    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_marginTop="60dp"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Address"
            android:layout_marginLeft="12dp"
            android:padding="10dp"

            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginBottom="4dp"/>

        <EditText
            android:id="@+id/editTextAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:background="@drawable/edittext_border123"
            android:padding="10dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:hint="Enter Address" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="City"
            android:layout_marginLeft="12dp"
            android:layout_below="@+id/editTextAddress"
            android:padding="10dp"

            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginBottom="4dp"/>

        <EditText
            android:id="@+id/editTextCity"
            android:layout_width="match_parent"
            android:layout_marginTop="40dp"

            android:layout_height="wrap_content"
            android:layout_below="@id/editTextAddress"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/edittext_border123"
            android:hint="Enter City"
            android:padding="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Country"
            android:layout_marginLeft="12dp"
            android:layout_below="@+id/editTextCity"
            android:padding="10dp"

            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginBottom="4dp"/>

        <EditText
            android:id="@+id/editTextCountry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/editTextCity"
            android:layout_marginStart="16dp"
            android:background="@drawable/edittext_border123"
            android:padding="10dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:hint="Enter Country" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Area"
            android:layout_marginLeft="12dp"
            android:layout_below="@+id/editTextCountry"
            android:padding="10dp"

            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginBottom="4dp"/>

        <EditText
            android:id="@+id/editTextArea"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/editTextCountry"
            android:hint="Enter Area"
            android:background="@drawable/edittext_border123"
            android:padding="10dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="40dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone"
            android:id="@+id/djsdn"
            android:layout_marginLeft="12dp"
            android:layout_below="@+id/editTextArea"
            android:padding="10dp"

            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginBottom="4dp"/>

        <EditText
            android:id="@+id/editTextphone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/editTextArea"
            android:hint="Enter Phone"
            android:background="@drawable/edittext_border123"
            android:padding="10dp"
            android:maxLength="10"
            android:inputType="number"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="40dp"
            />






        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pincode"
            android:layout_marginLeft="12dp"
            android:layout_below="@+id/editTextphone"
            android:padding="10dp"

            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginBottom="4dp"/>

        <EditText
            android:id="@+id/editTextPincode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/editTextphone"
            android:hint="Enter Pincode"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/edittext_border123"
            android:inputType="number"
            android:padding="10dp"
            android:maxLength="6"
            android:layout_marginTop="40dp"
            />



        <TextView
            android:id="@+id/buttonSaveAddress"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:layout_below="@id/editTextPincode"

            android:layout_marginBottom="20dp"
            android:textAlignment="center"
            android:background="@drawable/rounded_edges1"
            android:drawablePadding="10dp"
            android:padding="10dp"
            android:text="Add"
            android:textColor="@color/white"
            android:textColorHint="#808080"
            android:textSize="20dp" />


</RelativeLayout>

    </RelativeLayout>
    </ScrollView>