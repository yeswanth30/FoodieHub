<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/rounded_top_edges"
    android:layout_margin="10dp">
    <ImageView
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:src="@drawable/check"></ImageView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/image">
        <TextView
            android:layout_below="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thank you for"
            android:textSize="30dp"
            android:textColor="@color/pink"
            android:gravity="center"
            android:textStyle="bold"></TextView>
        <TextView
            android:layout_below="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Your order"
            android:textSize="30dp"
            android:textColor="@color/pink"
            android:gravity="center"
            android:textStyle="bold"></TextView>
        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Discover the best foods from "
            android:textSize="18dp"
            android:textColor="@color/black"
            android:gravity="center"
            ></TextView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="over 1000 restaurants"
            android:textSize="18dp"
            android:textColor="@color/black"
            android:gravity="center"
            ></TextView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="OK"
            android:textSize="20dp"
            android:id="@+id/oktext"

            android:textStyle="bold"
            android:layout_marginTop="100dp"
            android:background="@drawable/signin"
            android:textColor="@color/white"
            android:backgroundTint="@color/pink"
            android:padding="10dp"
            android:gravity="center"
            ></TextView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Order something"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:background="@drawable/signin"
            android:textColor="@color/black"

            android:padding="10dp"
            android:gravity="center"
            ></TextView>
    </LinearLayout>
</LinearLayout>