<!--                android:text="Sign Out"-->
<!--                android:textColor="#B2B7C6"-->
<!--                android:textColorHint="#808080"-->
<!--                android:textSize="20dp" />-->
        </RelativeLayout>

    </RelativeLayout>





</RelativeLayout>

